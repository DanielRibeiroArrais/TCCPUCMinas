        </div>*@
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th class="">
                        @Html.DisplayNameFor(model => model.Barragem.Nome)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Sensor.Nome)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Sensor.Tipo)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.PlanoAcao.Mensagem)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Incidente.DataInclusao)
                    </th>
                </tr>
