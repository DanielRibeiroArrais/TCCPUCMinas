@model IEnumerable<TCC.PUC.SCA.Model.SpecificEntities.Common.DadosCompletoIncidentes>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <h5>Lista Incidentes</h5>
    </div>
