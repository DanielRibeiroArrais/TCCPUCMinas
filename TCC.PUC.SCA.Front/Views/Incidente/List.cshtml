            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Barragem.Nome)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Sensor.Nome)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Sensor.Tipo)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.PlanoAcao.Mensagem)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Incidente.DataInclusao)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>