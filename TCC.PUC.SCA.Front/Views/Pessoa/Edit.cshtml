@model TCC.PUC.SCA.Model.DBEntities.Pessoa

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var lBarragens = (List<TCC.PUC.SCA.Model.DBEntities.Barragem>)ViewBag.Barragens;
}

<h5>Editar Pessoa</h5>
<hr />
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" class="form-control" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="BarragemId" class="control-label"></label>
                <input class="form-control" disabled value="@lBarragens.Find(x => x.Id == (Model.BarragemId)).Nome" />
                <span asp-validation-for="BarragemId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group col-md-2 text-center">
            <label for="Active" class="control-label">Ativo</label>
            <div class="input-group">
                <div class="btn-group radioBtn mx-auto">
                    <a class="btn btn-primary active" data-toggle="Active" data-title="True" onclick="setarValorBoleano(true, 'Active')">Sim</a>
                    <a class="btn btn-primary notActive" data-toggle="Active" data-title="False" onclick="setarValorBoleano(false, 'Active')">Não</a>
                </div>
                <input type="hidden" asp-for="Situacao" value="True">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control telefone" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="SMS" class="control-label"></label>
                <input asp-for="SMS" class="form-control telefone" />
                <span asp-validation-for="SMS" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="Whatsapp" class="control-label"></label>
                <input asp-for="Whatsapp" class="form-control telefone" />
                <span asp-validation-for="Whatsapp" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="DataInclusao" class="control-label"></label>
                <input type="datetime" asp-for="DataInclusao" asp-format="{0:dd/MM/yyyy hh:mm:ss}" class="form-control" disabled />
                <span asp-validation-for="DataInclusao" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="DataAlteracao" class="control-label"></label>
                <input type="datetime" asp-for="DataAlteracao" asp-format="{0:dd/MM/yyyy hh:mm:ss}" class="form-control" disabled />
                <span asp-validation-for="DataAlteracao" class="text-danger"></span>
            </div>
        </div>
    </div>
    <hr />
    <div class="form-group">
        <button type="submit" value="Confirmar" class="btn btn-primary rounded float-right"><i class="fas fa-save"></i> Confirmar</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
